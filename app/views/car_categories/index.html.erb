<h1>Categorias de Carros</h1>
<% if @categories.empty? %>
  <h3>Não há categorias cadastradas no sistema.</h3>
<% end %>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, car_category_path(category) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Voltar', root_path %>