<h1>Fabricantes</h1>
<% if @manufacturers.any? && current_user.admin? %>
  <%= link_to 'Registrar novo fabricante', new_manufacturer_path %>
<%end %>

<% if @manufacturers.empty? %>
  <% if current_user.admin? %>
    <h3> Não ha fabricantes cadastrados no sistema, <%= link_to "clique aqui", new_manufacturer_path %> para
      cadastrar um novo fabricante.
    </h3>
    <% else %>
    <h3> Não ha fabricantes cadastrados no sistema. </h3>
  <% end %>

<% end %>

<ul>
  <% @manufacturers.each do |manufacturer|%>
    <li><%= link_to manufacturer.name, manufacturer %></li>
  <% end %>
</ul>

<div><%= link_to 'Voltar', root_path %></div>