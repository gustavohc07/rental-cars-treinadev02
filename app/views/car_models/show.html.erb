<h1><%= @car_model.name %></h1>
<dl>
<dt>Ano:</dt>
  <dd><%= @car_model.year %></dd>
<dt>Fabricante:</dt>
<dd><%= @car_model.manufacturer.name%></dd>
<dt>Categoria:</dt>
<dd> <%=@car_model.car_category.name%> </dd>
</dl>

<% if current_user.admin? %>
  <%= link_to 'Editar', edit_car_model_path(@car_model)%>
<% end %>
<br>
<%= link_to "Ir para o fabricante #{@car_model.manufacturer.name}", manufacturer_path(@car_model.manufacturer) %>
<br>
<%= link_to "Ir para a categoria #{@car_model.car_category.name}", car_category_path(@car_model.car_category) %>
<br>
<%= link_to 'Voltar', car_models_path %>