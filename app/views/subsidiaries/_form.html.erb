<% if subsidiary.errors.any? %>
<p> Você deve corrigir os seguintes erros:</p>
  <% subsidiary.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
    <br>
  <% end %>
<% end %>

<%= form_with model: subsidiary, local: true do |f| %>
  <%= f.label :name, "Nome" %>
  <%= f.text_field :name %>

  <%= f.label :cnpj, "CNPJ" %>
  <%= f.text_field :cnpj %>

  <%= f.label :address, "Endereço" %>
  <%= f.text_field :address %>
  <p><%= f.submit 'Enviar' %></p>
<% end %>